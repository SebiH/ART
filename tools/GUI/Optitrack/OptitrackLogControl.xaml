<UserControl x:Class="GUI.Optitrack.OptitrackLogControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI.Optitrack"
        mc:Ignorable="d"
        Height="200" MinWidth="300"
        x:Name="root">
    <ListBox Height="200" x:Name="LogScroller" ItemsSource="{Binding ElementName=root, Path=Log}" ScrollViewer.VerticalScrollBarVisibility="Visible"></ListBox>
</UserControl>
